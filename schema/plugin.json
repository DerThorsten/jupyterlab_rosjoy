      "title": "Configured rooms",
      "description": "Configure Jitsi rooms.",
      "default": 
      [{
          "alias" : "My Gamepad"
      }]
    }
  },
  "additionalProperties": false,
  "$defs": {
    "gamepad" : {
      "type":"object",
      "properties":{
        "alias" : {"type":"string"}
      },
      "required":["alias"]
    }
  }
}