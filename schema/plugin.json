{
  "jupyter.lab.shortcuts": [],
  "jupyter.lab.setting-icon": "jupyterlab-rosjoy:icon",
  "jupyter.lab.setting-icon-label": "Controller Settings",
  "title": "jupyterlab-rosjoy",
  "description": "jupyterlab-rosjoy settings",
  "type": "object",
  "properties": 
  {
    "gamepads": 
    {
